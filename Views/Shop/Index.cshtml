@model IEnumerable<ThuongMaiDienTu.Models.tb_Shop>

@{
    ViewBag.Title = "Shop - Kênh người bán";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml";
}

<header class="shop-signup-header">
    <div class="shop-signup-logo">
        <a href="/Home/Index">Taka</a>
        <span>Kênh người bán</span>
    </div>
    <div class="shop-signup-user dropdown">
        <a href="" class="dropdown-toggle text-black" data-toggle="dropdown">
            <img src="~/images/@ViewBag.UserAvatar" alt="User Avatar" />
            <span>@ViewBag.UserName</span>
        </a>
        <ul class="dropdown-menu">
            <li><a href="/User/Logout">Đăng xuất</a></li>
        </ul>
    </div>
</header>

<main class="shop-manage">
    <div class="shop-sidebar">
        <nav>
            <ul class="shop-sidebar-delivery">
                <i class="fa-solid fa-truck-fast"></i>
                Vận chuyển
                <li><a href="#">Quản lí vận chuyển</a></li>
                <li><a href="#">Cài đặt vận chuyển</a></li>
            </ul>
            <ul class="shop-sidebar-order">
                <i class="fa-solid fa-receipt"></i>
                Quản lí đơn hàng
                <li><a href="#">Tất cả</a></li>
                <li><a href="#">Đã hủy</a></li>
            </ul>
            <ul class="shop-sidebar-product">
                <i class="fa-solid fa-box"></i>
                Quản lí sản phẩm
                <li><a href="/Product/Manage">Tất cả</a></li>
                <li><a href="/Product/Create">Thêm sản phẩm</a></li>
            </ul>
            <ul class="shop-sidebar-myshop">
                <i class="fa-solid fa-shop"></i>
                Quản lí shop
                <li><a href="#">Hồ sơ shop</a></li>
            </ul>
        </nav>
    </div>
    <div class="shop-manage-content">
        <div class="shop-manage-content-cover">
            <div class="shop-manage-home">
                <h4>Danh sách cần làm</h4>
                <ul>
                    <li>
                        <a href="#">
                            <strong>0</strong>
                            <span>Chờ xác nhận</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <strong>@ViewBag.OrdersWaitingForPickup</strong>
                            <span>Chờ lấy hàng</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <strong>0</strong>
                            <span>Đã xử lí</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <strong>0</strong>
                            <span>Đơn huỷ</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <strong>0</strong>
                            <span>Trả hàng/hoàn tiền</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <strong>0</strong>
                            <span>Sản phẩm tạm khoá</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <strong>@ViewBag.OutOfStockProducts</strong>
                            <span>Sản phẩm hết hàng</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <strong>0</strong>
                            <span>Khuyến mãi chờ xử lí</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</main>
